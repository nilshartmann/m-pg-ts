{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true // for getting version from package.json
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
